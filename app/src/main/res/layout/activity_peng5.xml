<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".peng5">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:src="@drawable/peng" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="463dp"
            android:src="@drawable/col6" />
        <!-- Menambah Toggle Button di tengah View -->
        <ToggleButton
            android:id="@+id/toggleSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="onToggleClicked"
            android:textOn="Play Tempat"
            android:textOff="Pause Tempat"
            android:background="@drawable/btn_rnd"
            android:textColor="#222" />
        <ToggleButton
            android:id="@+id/toggleSound2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="onToggleClicked2"
            android:textOn="Play ket Tempat"
            android:background="@drawable/btn_rnd"
            android:textOff="Pause ket Tempat"
            android:textColor="#222" />
        <ToggleButton
            android:id="@+id/toggleSound3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="onToggleClicked3"
            android:background="@drawable/btn_rnd"
            android:textOn="Play ..."
            android:textOff="Pause ..."
            android:textColor="#222" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimary"
                android:src="@drawable/home"
                android:onClick="home"/>

            <ImageButton
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="93dp"
                android:layout_toRightOf="@+id/home"
                android:background="@color/colorPrimary"
                android:src="@drawable/right"
                android:onClick="next"/>

            <ImageButton
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="93dp"
                android:layout_marginRight="96dp"
                android:layout_toLeftOf="@+id/home"
                android:background="@color/colorPrimary"
                android:onClick="prev"
                android:rotation="180"
                android:src="@drawable/right" />


        </RelativeLayout>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>